{% extends "base.html.jinja" %}

{% block title %}
    Ekstrakcja opinii
{% endblock title %}

{% block content %}

{% if error is defined %}
    <div class="alert alert-dark alert-dismissible fade show" role="alert">
        <strong> <i class="bi bi-sign-stop-fill"></i> Uwaga</strong> {{error}}
        <button type="button" class="btn_close" data-bs-dismiss="alert" aria-label="close">X</button>
    </div>
{% endif %}

<form method="POST" action="{{url_for('extract')}}" class="container">
   
    <div class="row 3-g align-items-center"></div>

        <div class="col-auto">
            <label for="product_id" class="col-form-label">Kod produktu z Ceneo.pl</label>
        </div>
        
        <div class="col-auto">
            <input type="text" name="product_id" class="form-control" id="product_id" aria-describedby="product_idHelpInline" placeholder="Podaj kod poduktu" required>
        </div>

        <div class="col-auto">
            <span id="product_idHelpInline" class="form-text">Kod produktu musi zawieraÄ‡ 5-10 cyfr.</span>
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-dark">Pobierz opinie</button>
        </div>

    </div>

</form>

{% endblock content %}